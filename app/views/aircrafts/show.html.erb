<div class="row">
  <div class="card mt-4 rounded-4 p-3" style="background-image: url('<%= cl_image_path @aircraft.photo.key %>');">
    <h2 class="card-text text-primary text-uppercase"><strong><%= @aircraft.name %></strong></h2>
    <div  class="aircraft-picture bg-grey w-100 border-bottom"

    ></div>
    <div class="d-flex flex-column card-body aircraft-category bg-light opacity-75">
      <div class="aircraft-category-icon bg-primary shadow-sm rounded-circle"><i
            class="fa-solid fa-plane text-white"></i></div>
        <div class="row">
          <div class="col-6">
            <p class="card-text">CATEGORY : <strong><%= @aircraft.category %></strong></p>
            <p class="card-text">PRICE : <strong class="text-success"><%= @aircraft.day_price %></strong><small> â‚¬ / jour</small></p>
            <p class="card-text justify-end">RANGE : <strong><%= @aircraft.range %></strong></p>
            <p class="card-text justify-end">CAPACITY : <strong><%= @aircraft.capacity %></strong></p>
          </div>
          <div class="col-6">
            <p class="card-text justify-end">DESCRIPTION : <strong><%= @aircraft.description %></strong></p>
            <%= link_to "Reserve", new_aircraft_booking_path(@aircraft), class:"btn btn-outline-success" %>
          </div>
        </div>
      </div>
  </div>
  <div class="d-flex justify-content-between mt-3 mb-5 p-0">
    <%= link_to "Back", aircrafts_path, class:"btn btn-outline-secondary" %>
    <% if current_user.id == @aircraft.user_id %>
      <%= link_to "Delete", aircraft_path(@aircraft), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" }, class:"btn btn-outline-danger"  %>
    <% end %>
  </div>
</div>
