<div class="aircraft-card card mt-4 rounded-4">
  <% if aircraft.photo.attached? %>
    <%=
      cl_image_tag aircraft.photo.key,
      height: 300,
      width: 400,
      crop: :fill,
      class: 'card-img-top img-fluid rounded-top-4 img-center'
    %>
  <% end %>
  <div class="card-body d-flex flex-column justify-content-between">
    <div>
      <h4><%= aircraft.name %></h4>
      <div class="row ">
        <p class="col card-text"><%= aircraft.category %></p>
        <p class="col text-end card-text text-primary"><%= aircraft.user.name %></p>
      </div>
      <p class="card-text"><%= aircraft.day_price%>â‚¬ / jour</p>

      <p class="card-text text-secondary"><%= aircraft.location %></p>

    </div>
  </div>
</div>
