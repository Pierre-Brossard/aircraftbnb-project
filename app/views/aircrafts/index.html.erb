<div class="index-container mt-4">

  <ul class="aircraft-cards">
      <% @aircrafts.each do |aircraft| %>
        <li class=".aircraft-card" >
          <%= link_to render('partials/aircraft_card', aircraft: aircraft ), aircraft_path(aircraft)%>
        </li>
      <% end %>
  </ul>

  <div  class="rounded-5 border"
        style="height: 90vh; top: 2em; position: sticky;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
        >

  </div>

</div>
