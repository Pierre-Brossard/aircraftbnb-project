<div class="navbar navbar-expand-sm navbar-light navbar-flybnb">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "flybnb.png", alt: "Flybnb Logo" %>
    <% end %>

    <%= render 'partials/search_bar', path: root_path, class:"navbar-search" %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="user-action navbar-nav me-auto">

          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% if user_signed_in? %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
                <%= link_to 'Log out   <i class="fa-solid fa-right-from-bracket" style="color:red;"></i>'.html_safe, destroy_user_session_path, data: { turbo_method: :delete }, class: 'log-btn dropdown-item' %>
              </div>
            <% else %>
                <%= link_to '<i class="fa-solid fa-right-to-bracket"></i>'.html_safe, new_user_session_path, class: 'log-btn dropdown-item' %>
            <% end %>
          </li>

      </ul>
    </div>
  </div>
</div>
